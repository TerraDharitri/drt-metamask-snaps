{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "lib": ["es6"],
    "types": ["node", "jest"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__/**"]
}
